<div class="product-details">
  <section>
    <h3>Beats Solo Wireless Headphones</h3>
    <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half-o"></i>
    </div>
  </section>

  <section class={{unless @ifDetails 'h4'}}>
    <del class="small text-black-50">{{currency @price.original}}</del>
    <i class="text-danger font-weight-bold">{{currency @price.current}}</i>
  </section>

  {{#if @ifDetails}}
    <div class="d-flex align-items-end justify-content-between">
      <div>
        <h6 class="">Color</h6>
        <div class="product-colors active-{{@color}}">
          {{#each @colors as |cl|}}
            <span class="product-color {{concat 'color-' cl.color}}" {{ on "click" (fn @onChangeColor cl.color)}}></span>
          {{/each}}
        </div>
      </div>
      <button class="btn btn-info" type="button" {{on 'click' this.addToCart}}>
        <i class="fa fa-shopping-cart mr-1"></i>
        Add to cart
      </button>
    </div>
  {{/if}}
</div>